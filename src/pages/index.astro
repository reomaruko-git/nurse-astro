      const inactiveClasses = ["bg-sky-200", "text-slate-600", "border-t-4", "border-transparent", "py-3", "z-10", "relative", "rounded-t-xl"];

      const resetStyles = (btn) => {
        btn.classList.remove(...activeClasses);
        btn.classList.remove(...inactiveClasses);
        btn.classList.remove("text-orange-500", "border-orange-500");
